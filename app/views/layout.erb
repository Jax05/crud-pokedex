<!doctype html>
<html>
  <head>
    <title>CRUD Pokedex</title>
    <link rel="stylesheet" href="https://unpkg.com/spectre.css/dist/spectre.min.css">
  </head>
  <style>
    .container {
      width: 80%;
      margin: 0 auto;
    }
  </style>
  <body>
    <div class="container">
      <% if logged_in? %>
        <header class="navbar">
          <section class="navbar-section">
            <a href="/" class="navbar-brand mr-2">CRUD Pokedex</a>
          </section>
          <section class="navbar-section">
            <a href="/pokemon" class="btn btn-link">Pokemon</a>
            <a href="/user/<%= @user.slug %>" class="btn btn-link">Profile</a>
            <a href="/logout" class="btn btn-link">Log Out</a>
          </section>
      </header>
      <% else %>
        <header class="navbar">
          <section class="navbar-section">
            <a href="/" class="navbar-brand mr-2">CRUD Pokedex</a>
          </section>
          <section class="navbar-section">
            <a href="/signup" class="btn btn-link">Sign Up</a>
            <a href="/login" class="btn btn-link">Log In</a>
          </section>
      </header>
      <% end %>
      <% if flash[:error] %>
        <span><%= flash[:error] %></span>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
